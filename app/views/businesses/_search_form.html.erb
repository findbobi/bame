<%= form_tag(businesses_path, method: :get, class: "searchForm searchFull") do %>
  <div class="input-group mb-3 flex-nowrap justify-content-center">
    <%= select_tag :what,
                    option_groups_from_collection_for_select(BusinessGroup.all, :business_types, :name, :name, :name, params[:what]),
                    { class: "form-select mb-3", id: "nameBusiness", prompt: "What" } %>
    <%= text_field_tag(:where, params[:where], placeholder: "Where", class: "form-control mb-3", id: "nameBusiness") %>
    <%= text_field_tag(:tags, params[:tags], placeholder: "Attribute/Community", class: "form-control mb-3", id: "nameBusiness") %>
    <%= text_field_tag(:languages, params[:languages], placeholder: "Languages", class: "form-control mb-3", id: "typeBusinessReg") %>

    <span class="input-group-text mb-3">
      <%= button_tag(type: "submit", class: "btn btn-primary btn-small submitBtn") do %>
        <i class="bi bi-search"></i>
      <% end %>
    </span>
  </div>
<% end %>


<%= form_tag(businesses_path, method: :get, class: "searchForm searchMobile") do %>
  <div class="row">
    <div class=" mb-3">
      <%= select_tag :what,
                      option_groups_from_collection_for_select(BusinessGroup.all, :business_types, :name, :name, :name, params[:what]),
                      { class: "form-select mb-3", id: "nameBusiness", prompt: "What" } %>
    </div>
  </div>

  <div class="row">
    <div class=" mb-3">
      <%= text_field_tag(:where, params[:where], placeholder: "Where", class: "form-control mb-3", id: "nameBusiness") %>
    </div>
  </div>
  <div class="row">
    <div class=" mb-3">
      <%= text_field_tag(:tags, params[:tags], placeholder: "Attribute/Community", class: "form-control mb-3", id: "nameBusiness") %>
    </div>
  </div>

  <div class="row">
    <div class=" mb-3">
      <%= text_field_tag(:languages, params[:languages], placeholder: "Languages", class: "form-control mb-3", id: "typeBusinessReg") %>
    </div>
  </div>

  <div class="row">
    <span class="mobileSubmitBtn mb-3 btn btn-primary btn-small submitBtn">
      <%= button_tag("Search", type: "submit", class: "btn btn-primary btn-small submitBtn") %>
    </span>
  </div>
<% end %>

<style media="screen">
  .teaser .searchForm {
    position: absolute;
    margin-left: 50px;
    margin-right: 50px;
    top: 40%;
    z-index: 200;
  }


  .searchForm input {
    border-radius: 30px;
  }

  .searchForm .input-group-text {
    background-color: white;
    border-radius: 30px;
  }

  .searchForm input {
    min-width: 200px;
    max-width: 300px;
  }

  .searchForm select {
    min-width: 200px;
    max-width: 300px;
    color: gray;
    border-radius: 30px;

  }

  .searchForm button {
    border-radius: 30px;
  }

  .searchMobile button {
    width: 300px;
    min-width: 200px;
  }

  .mobileSubmitBtn {
    background-color: black;
    border-radius: 30px;
  }

  @media (max-width: 900px) {
    .searchFull {
      display: none
    }
  }

  @media (min-width: 901px) {
    .searchMobile {
      display: none
    }
  }

</style>
